{
	"name": "ocframework",
	"version": "0.9.1",

	"readmeFilename": "README.md",
	"scripts": {
		"test": "make"
	},
	"main": "PackageManager.js",
	"author": "alee chou",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git@github.com:OpenComb/ocFramework.git"
	},
	"bugs": {
		"url": "https://github.com/OpenComb/ocFramework/issues"
	},
	"devDependencies": {
		"should": "*",
		"mocha": "*"
	},
	"dependencies": {
		"send": "0.1.0"
		, "connect": "2.7.0"
		, "octemplate": "0.1.2"
		, "ocsteps": "0.2.19"
		, "mongodb": "1.2.14"
		, "stack-trace": "0.0.6"
		, "mocks": "0.0.11"
		, "log4js": "0.6.6"
	} ,


	"logger": {
		"appenders": [
			{
				"type": "console"
				, "category": ["access","ocframework"]
				, "category-dev": ["access","ocframework","controller","nut","former"]
			}
			, {
				"type": "file"
				, "category": "ocframework"
				, "filename": "log/trace/ocframework.log"
				, "maxLogSize": 20480
				, "backups": 3
			}
			, {
				"type": "file"
				, "category": "access"
				, "filename": "log/ocframework.access.log"
				, "maxLogSize": 20480
				, "backups": 10
			}
		]
	}
}
